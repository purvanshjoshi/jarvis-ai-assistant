# J.A.R.V.I.S - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=JARVIS
DEBUG=False
LOG_LEVEL=INFO

# Theme Settings
THEME=blue  # Options: blue, red, green
THEME_ANIMATION_SPEED=1.0
THEME_GLOW_INTENSITY=1.0

# Voice Configuration
VOICE_ENABLED=True
VOICE_LANGUAGE=en-US
VOICE_RECOGNITION_ENGINE=google  # Options: google, sphinx

# Camera Settings
CAMERA_ENABLED=True
CAMERA_DEVICE_ID=0
CAMERA_FPS=30
CAMERA_RESOLUTION_WIDTH=320
CAMERA_RESOLUTION_HEIGHT=240
CAMERA_FACE_DETECTION=True

# System Monitoring
MONITOR_CPU=True
MONITOR_MEMORY=True
MONITOR_DISK=True
MONITOR_TEMPERATURE=True
MONITOR_BATTERY=True
MONITOR_NETWORK=True
MONITOR_UPDATE_INTERVAL=1000  # milliseconds

# Memory Settings
MEMORY_ENABLED=True
MEMORY_FILE=memory/memory.json
MEMORY_DEBUG_LOG=memory/memory_debug.log
MEMORY_BACKUP_ENABLED=True
MEMORY_BACKUP_INTERVAL=3600  # seconds

# File Storage Paths
SCREENSHOT_DIR=screenshots/
LOG_DIR=logs/
CONFIG_DIR=config/

# Security Settings
ENCRYPT_MEMORY=False
ALLOW_REMOTE_COMMANDS=False
REQUIRE_AUTHENTICATION=False

# API Keys (If using external services)
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Performance Settings
MAX_PROCESSES_DISPLAY=10
REFRESH_RATE_HZ=60
USE_GPU_ACCELERATION=False
